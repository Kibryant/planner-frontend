{
  "cli": {
    "version": ">= 10.1.1",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true,
      "node": "20.11.1",
      "android": {
        "env": {
          "PLATFORM": "android"
        },
        "autoIncrement": "version"
      },
      "ios": {
        "env": {
          "PLATFORM": "ios"
        },
        "autoIncrement": "version"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-services.json",
        "track": "internal"
      }
    }
  }
}
