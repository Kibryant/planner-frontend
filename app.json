{
  "expo": {
    "name": "Planner Mecha Turbo",
    "slug": "planner-frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./public/icon.png",
    "scheme": "planner-mecha-turbo",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./public/splash.png",
      "backgroundColor": "#09090B",
      "resizeMode": "none"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./public/adaptive-icon.png"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./public/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-media-library",
        {
          "photosPermission": "Você precisa permitir o acesso às fotos para poder adicionar imagens ao seu plano de estudos.",
          "savePhotosPermission": "Você precisa permitir o acesso às fotos para poder adicionar imagens ao seu plano de estudos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
