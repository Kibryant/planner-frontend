{
  "expo": {
    "name": "Planner Mecha Turbo",
    "slug": "planner-frontend",
    "version": "1.0.28",
    "orientation": "portrait",
    "icon": "./public/icon.png",
    "scheme": "planner-mecha-turbo",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./public/splash.png",
      "backgroundColor": "#09090B",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.planner.mecha.turbo.br"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./public/adaptive-icon.png"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ],
      "package": "com.planner.mecha.turbo.br"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./public/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-media-library",
        {
          "photosPermission": "Você precisa permitir o acesso às fotos para poder adicionar imagens ao seu plano de estudos.",
          "savePhotosPermission": "Você precisa permitir o acesso às fotos para poder adicionar imagens ao seu plano de estudos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "4b75a63a-23dd-462c-b2e3-bdc51b20a172"
      }
    }
  }
}
